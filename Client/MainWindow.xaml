<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="720">
    <Grid>
        <TextBox x:Name="Login"   HorizontalAlignment="Left" Height="30" Margin="579,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="125" />
        <TextBox x:Name="Text" HorizontalAlignment="Left" Height="92" Margin="0,358,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="579"/>
        <Button Content="Отправить" HorizontalAlignment="Left" Margin="579,358,-0.4,0" VerticalAlignment="Top" Width="135" Height="92" x:Name="Submit" Click="Submit_Click"/>
        <GroupBox  Background="AliceBlue" HorizontalAlignment="Left" Height="353" VerticalAlignment="Top" Width="574">
            <Label HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.211,-0.555" x:Name="Ecran"/>
        </GroupBox>
        

    </Grid>
</Window>
